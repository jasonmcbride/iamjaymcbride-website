---
/**
 * ContactForm Component
 *
 * This component renders a styled contact form with a heading.
 */

---

<section class="mt-12">
	<h2 class="text-3xl font-semibold text-center text-gray-800 mb-8">Get in Touch</h2>

	<form name="contact" method="POST" data-netlify="true" class="space-y-4 max-w-2xl mx-auto p-8 bg-white rounded-lg shadow-lg">
	  <div>
		<label for="name" class="block text-sm font-medium text-gray-700">Your Name:</label>
		<input type="text" name="name" id="name" class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-base" required>
	  </div>

	  <div>
		<label for="email" class="block text-sm font-medium text-gray-700">Your Email:</label>
		<input type="email" name="email" id="email" class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-base" required>
	  </div>

	  <div>
		<label for="role" class="block text-sm font-medium text-gray-700">Your Role:</label>
		<select name="role[]" id="role" multiple class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-base">
		  <option value="leader">Developer</option>
		  <option value="follower">Business Owner</option>
		  <option value="follower">Tech Enthusiast</option>
		  <option value="follower">Recruiter</option>
		</select>
	  </div>

	  <div>
		<label for="message" class="block text-sm font-medium text-gray-700">Message:</label>
		<textarea name="message" id="message" rows="4" class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-base" required></textarea>
	  </div>

	  <div>
		<button type="submit" class="w-full bg-blue-600 text-white font-semibold py-3 px-4 rounded-md hover:bg-blue-700 transition duration-300">Send</button>
	  </div>
	</form>
  </section>
